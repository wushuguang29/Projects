							// const url = config.host + '/api/Login/login';

							uni.getUserInfo({
								provider: 'weixin',
								success: (info) => { //这里请求接口
									console.log(res2);
									console.log(info);
									console.log('now:' + config.host);
									const url = config.host + '/api/Login/login';
									uni.request({
										url: url,
										header: {
											'content-type': 'application/x-www-form-urlencoded'
										},
										data: {
											login_type: 1,
											encryptedData: info.encryptedData,
											signature: info.signature,
											rawData: info.rawData,
											iv: info.iv,
											code: res2.code
										},
										method: 'GET',
										dataType: 'json',
										success: function(res) {
											console.log('成功');
											console.log(res);
											res.data.data.flag = true;
											uni.setStorageSync('rowData', res.data.data);
											uni.setStorageSync('userToken', "Bearer " + res.data.data.token);
											console.log("uni", uni.getStorageSync('userToken'))
											if (res.data.data.phone == null) {
												uni.redirectTo({
													url: '/pages/index/updatePhone',
												});
											} else {
												uni.switchTab({
													url: '/pages/index/index'
												});
											}

										},
										fail: function(err) {
											console.log('失败');
											console.log(err);
										}
									})

								},
								fail: () => {
									uni.showToast({
										title: "微信登录授权失败",
										icon: "none"
									});
								}
							})

						},
						fail: () => {
							uni.showToast({
								title: "微信登录授权失败",
								icon: "none"
							});
						}
					})

				} else {
					uni.showToast({
						title: '微信拒绝登录',
						icon: "none"
					});
				}

				//#endif
			}
		}
