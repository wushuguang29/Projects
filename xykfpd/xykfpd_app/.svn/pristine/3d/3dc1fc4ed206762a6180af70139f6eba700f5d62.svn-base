				// 	this.lineColor='#adadad'
				// this.codeType=false;
				// uni.showToast({
				// title: '手机号格式错误',
				// icon: 'none'
				// });
				// return;
				// }else{
				// 	this.lineColor='#47C3A8'
				// 	this.codeType=true;
				// }
