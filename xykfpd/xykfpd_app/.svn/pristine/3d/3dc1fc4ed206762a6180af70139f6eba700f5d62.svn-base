				console.log("进入AlipayLogin方法");
				var param = {
					login_type:2,
					auth_code:auth_code
				};
				console.log('登录界面AUTH_CODE：',auth_code);
				const url = config.host + '/api/Login/login';
				uni.request({
					url: url,
					header: {
						'content-type': 'application/x-www-form-urlencoded'
