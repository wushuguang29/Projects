				var that = this;
				that.form.login_type = 3;
				that.$ajax.get({
					url: '/api/login/login',
					param: that.form,
					header: {
						'Content-Type': 'application/json;charset=UTF-8',
						'x-requested-with': "XMLHttpRequest"
					},
				}).then((res) => {
					console.log(res)
					this.form.phone_code = '';
