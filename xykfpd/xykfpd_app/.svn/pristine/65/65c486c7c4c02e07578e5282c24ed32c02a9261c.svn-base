			if(!regPhone.test(val)){
			
			uni.showToast({
			title: '手机号格式错误',
			icon: 'none'
			});
			return;
			}else{
				
			}
			},
			phoneChange(e){
				if(this.form.phone!=undefined&&this.form.phone_code!=undefined){
					console.log(this.form.phone,this.form.phone_code)
					this.btnsColor='#47C3A8'
				}else{
					this.btnsColor='#adadad'
				}
