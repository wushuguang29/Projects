            //情况发送窗口数据
            this.formData.conter = "";
            var pushData = {
              from_id:params.sender,
              from_name:params.sender_name,
              to_id:params.receiver,
              to_name:params.receiver_name,
              content:params.message,
              send_time:new Date()
            };
            this.message_array.push(pushData);
          }
            
        })
